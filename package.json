{
	"name": "ponti-ui",
	"license": "MIT",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"build": "tsc && vite build",
		"commit": "cz",
		"dev": "vite --open",
		"ops:eslint": "TIMING=1 eslint src",
		"prepare": "husky install",
		"preview": "vite preview",
		"preview:test": "start-server-and-test preview http://localhost:4173",
		"test": "vitest",
		"test:ci": "vitest run",
		"test:e2e": "pnpm preview:test 'cypress open'",
		"test:e2e:headless": "vite build && pnpm preview:test 'cypress run'",
		"test:e2e:ci": "vite build && pnpm preview:test 'cypress run --record'",
		"format": "eslint --fix src",
		"run-tsc": "tsc",
		"run-eslint": "eslint --cache --fix --ignore-path .gitignore --ext .ts,.tsx src",
		"run-stylelint": "stylelint --cache --fix --ignore-path .gitignore \"**/*.css\"",
		"lint": "run-p run-tsc run-eslint run-stylelint",
		"validate": "run-p lint test:ci test:e2e:headless"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "6.1.2",
		"@fortawesome/free-solid-svg-icons": "6.1.2",
		"@fortawesome/react-fontawesome": "0.1.19",
		"@testing-library/react": "12.1.5",
		"axios": "^0.27.2",
		"classname": "^0.0.0",
		"prop-types": "^15.8.1",
		"react": "17.0.2",
		"react-countup": "^6.2.0",
		"react-dom": "17.0.2",
		"react-is": "^18.1.0",
		"react-query": "3.38.1",
		"react-router-dom": "6.3.0",
		"styled-components": "^5.3.5"
	},
	"devDependencies": {
		"@cypress/code-coverage": "3.9.12",
		"@nabla/vite-plugin-eslint": "1.4.0",
		"@testing-library/cypress": "8.0.2",
		"@testing-library/dom": "8.13.0",
		"@testing-library/jest-dom": "5.16.4",
		"@testing-library/react-hooks": "8.0.0",
		"@testing-library/user-event": "13.5.0",
		"@types/css-mediaquery": "0.1.1",
		"@types/react": "17.0.44",
		"@types/react-dom": "17.0.16",
		"@types/react-router-dom": "5.3.3",
		"@types/styled-components": "^5.1.25",
		"@types/testing-library__jest-dom": "5.14.3",
		"@typescript-eslint/eslint-plugin": "5.21.0",
		"@typescript-eslint/parser": "5.21.0",
		"@vitejs/plugin-react": "1.3.2",
		"autoprefixer": "10.4.7",
		"c8": "7.11.2",
		"commitizen": "4.2.5",
		"css-mediaquery": "0.1.2",
		"cypress": "9.6.0",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "8.14.0",
		"eslint-config-airbnb": "19.0.4",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-airbnb-typescript": "17.0.0",
		"eslint-plugin-cypress": "2.12.1",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jsx-a11y": "6.5.1",
		"eslint-plugin-react": "7.29.4",
		"eslint-plugin-react-hooks": "4.4.0",
		"eslint-plugin-react-prefer-function-component": "1.0.0",
		"eslint-plugin-testing-library": "5.3.1",
		"husky": "7.0.4",
		"jsdom": "19.0.0",
		"lint-staged": "12.4.1",
		"msw": "0.39.2",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.13",
		"rollup": "2.71.1",
		"rollup-plugin-istanbul": "3.0.0",
		"start-server-and-test": "1.14.0",
		"stylelint": "14.8.1",
		"stylelint-config-standard": "25.0.0",
		"typescript": "4.6.4",
		"vite": "2.9.7",
		"vite-plugin-pwa": "0.12.0",
		"vite-tsconfig-paths": "3.4.1",
		"vitest": "0.10.2",
		"whatwg-fetch": "3.6.2",
		"workbox-build": "6.5.3",
		"workbox-window": "6.5.3"
	},
	"browserslist": {
		"production": "Edge >= 18, Firefox >= 60, Chrome >= 61, Safari >= 11, Opera >= 48",
		"development": [
			"last 1 chrome version",
			"last 1 firefox version"
		]
	},
	"lint-staged": {
		"*": "eslint --fix src",
		"*.css": "stylelint --cache --fix",
		"*.{ts,tsx}": [
			"eslint --cache --fix",
			"vitest related --run --coverage=false"
		]
	},
	"nyc": {
		"report-dir": "coverage/cypress",
		"reporter": [
			"lcov"
		]
	}
}
